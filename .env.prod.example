# OpenEOS Production Environment Variables
# Copy this file to .env.prod and fill in the values

# Database
DATABASE_USER=openeos
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_NAME=openeos

# JWT - Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
JWT_ACCESS_TOKEN_EXPIRATION=30m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# 2FA Encryption Key - Generate with: openssl rand -base64 32
TWO_FACTOR_ENCRYPTION_KEY=CHANGE_ME_MIN_32_CHARS

# CORS - Comma separated list of allowed origins
CORS_ORIGINS=https://app.openeos.de,https://order.openeos.de

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=300

# Email (optional but recommended for production)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@openeos.de
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@openeos.de

# Stripe (optional)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Sentry (optional but recommended)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
